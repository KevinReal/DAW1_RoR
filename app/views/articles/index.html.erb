<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Published at</th>
      <th>Body</th>
      <th>Title</th>
      <th>Subtitle</th>
			<th>Article_id</th>
			<th>Article_competition_id</th>
			<th>Article_result_id</th>
			<th>Article_team_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.author %></td>
        <td><%= article.published_at %></td>
        <td><%= article.body %></td>
        <td><%= article.title %></td>
        <td><%= article.subtitle %></td>
				<td><%= article.id %></td>
				<td><%= article.competition_id %></td>
				<td><%= article.result_id %></td>
				<td><%= article.team_id %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
