<%= form_with(model: [@article, @article.comments.new], local: true) do |form| %>


  <div class="field">
    <%= form.label :creator %>
    <%= form.text_field :creator%>
  </div>

  <div class="field">
    <%= form.label :published_at %>
    <%= form.text_field :published_at %>
  </div>


  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>


  <div class="actions">
    <%= form.submit 'Add' %>
  </div>
<% end %>
