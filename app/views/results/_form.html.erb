  </div>
		
	<div class="field">
    <%= form.label :local_id %>
    <%= form.number_field :local_id, id: :result_local_id %>
  </div>

	<div class="field">
    <%= form.label :visitor_id %>
    <%= form.number_field :visitor_id, id: :result_visitor_id %>
  </div>

  <div class="field">
    <%= form.label :competition_id %>
    <%= form.number_field :competition_id, id: :result_competition_id %>
