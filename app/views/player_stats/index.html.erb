<p id="notice"><%= notice %></p>

<h1>Player Stats</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @player_stats.each do |player_stat| %>
      <tr>
        <td><%= player_stat.name %></td>
        <td><%= player_stat.value %></td>
        <td><%= link_to 'Show', player_stat %></td>
        <td><%= link_to 'Edit', edit_player_stat_path(player_stat) %></td>
        <td><%= link_to 'Destroy', player_stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player Stat', new_player_stat_path %>
