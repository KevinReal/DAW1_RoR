<%= form_with(model: [@team, @team.players.new], local: true) do |form| %>


  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name%>
  </div>

  <div class="field">
    <%= form.label :number %>
    <%= form.number_field :number %>
  </div>

  <div class="actions">
    <%= form.submit 'Add' %>
  </div>
<% end %>
